{
  "name": "pinkka",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run start:backend & npm run start:frontend",
    "start:test": "npm run start:backend:test & npm run start:frontend",
    "start:backend": "npm -w @pinkka/backend run dev",
    "start:backend:test": "DATABASE_DB=pinkka_test_db npm -w @pinkka/backend run dev",
    "start:frontend": "npm -w @pinkka/frontend run dev",
    "migrate:create": "npm -w @pinkka/backend run migrate:create",
    "migrate:up": "npm -w @pinkka/backend run migrate:up",
    "migrate:up:test": "npm -w @pinkka/backend run migrate:up:test",
    "test:backend:integration": "npm -w @pinkka/backend run test:integration",
    "docker:psql": "docker exec -it pinkka-database-1 psql -U admin pinkka_db",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "prettify": "npx prettier --write ."
  },
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@types/node": "^24.10.2",
    "eslint": "^9.38.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-zod-x": "^1.7.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "zod": "^4.1.13"
  }
}
