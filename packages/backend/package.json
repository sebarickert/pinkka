{
  "name": "@pinkka/backend",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "node-pg-migrate -j ts",
    "migrate:create": "npm run migrate create",
    "migrate:up": "npm run migrate up",
    "migrate:up:test": "npm run migrate up -- --database-url-var=DATABASE_URL_TEST",
    "kysely:codegen": "kysely-codegen --dialect postgres --out-file ./src/types/db/db.d.ts",
    "test": "DATABASE_DB=pinkka_test_db vitest",
    "test:integration": "DATABASE_DB=pinkka_test_db vitest --project integration --no-file-parallelism"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@hono/zod-validator": "^0.7.4",
    "@pinkka/schemas": "*",
    "better-auth": "^1.3.30",
    "dotenv": "^17.2.3",
    "hono": "^4.9.9",
    "kysely": "^0.28.7",
    "pg": "^8.16.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "kysely-codegen": "^0.19.0",
    "node-pg-migrate": "^8.0.3",
    "tsx": "^4.7.1",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
