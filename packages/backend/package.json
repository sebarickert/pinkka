{
  "name": "@pinkka/backend",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "node-pg-migrate -j ts",
    "migrate:create": "npm run migrate create",
    "migrate:up": "DATABASE_URL=postgresql://admin:admin@localhost:5432/pinkka_db npm run migrate up",
    "migrate:up:test": "DATABASE_URL=postgresql://admin:admin@localhost:5432/pinkka_test_db npm run migrate up",
    "kysely:codegen": "DATABASE_URL=postgresql://admin:admin@localhost:5432/pinkka_db kysely-codegen",
    "test": "DATABASE_DB=pinkka_test_db vitest",
    "test:integration": "DATABASE_DB=pinkka_test_db vitest --project integration"
  },
  "dependencies": {
    "@pinkka/schemas": "*",
    "@hono/node-server": "^1.19.5",
    "hono": "^4.9.9",
    "kysely": "^0.28.7",
    "pg": "^8.16.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "kysely-codegen": "^0.19.0",
    "node-pg-migrate": "^8.0.3",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
