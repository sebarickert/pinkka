    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "node-pg-migrate": "^8.0.3",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
