---
import { Heading } from "@/components/elements/heading";
import RootLayout from "@/layouts/RootLayout.astro";
import { RegisterForm } from "@/components/features/register-form";
---

<RootLayout title="Register">
  <div class="w-full max-w-md mx-auto grid gap-8">
    <Heading level="h1">Create account</Heading>
    <div class="grid gap-8">
      <p class="text-muted-foreground">
        Already have an account?{" "}
        <a href="/login" class="text-white underline"> Log in </a>
      </p>
      <RegisterForm client:load />
    </div>
  </div>
</RootLayout>
